{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm -w build:web",
    "beforeDevCommand": "pnpm -w dev:web",
    "devPath": "http://localhost:3000",
    "distDir": "../../web/out"
  },
  "package": {
    "productName": "GenDAM",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": false,
        "scope": [
          {
            "name": "sidecar/whisper",
            "sidecar": true,
            "args": [
              "-m",
              {
                "validator": "\\S+"
              },
              "-f",
              {
                "validator": "\\S+"
              },
              "--language",
              "auto",
              "-oj",
              "-of",
              {
                "validator": "\\S+"
              }
            ]
          }
        ],
        "sidecar": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true,
        "relaunchDangerousAllowSymlinkMacos": false
      },
      "dialog": {
        "ask": true,
        "open": true,
        "message": true
      },
      "protocol": {
        "all": true,
        "assetScope": [
          "/**/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Video",
      "copyright": "Copyright 2024 GenDAM AI.",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "sidecar/qdrant",
        "sidecar/ffmpeg",
        "sidecar/ffprobe",
        "sidecar/whisper"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "ai.gendam.desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "resources/*"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self' asset: https://asset.localhost; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "GenDAM",
        "titleBarStyle":"Transparent",
        "height": 800,
        "width": 1400,
        "minHeight": 600,
        "minWidth": 1050,
        "fullscreen": false,
        "resizable": true
      }
    ]
  }
}
